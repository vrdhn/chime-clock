<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chime Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/switch_hourly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hourly Chime"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switch_half_hourly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Half-Hourly Chime"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switch_long_chime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Optional Long Chime Before"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night Mode Hours"
            android:layout_marginBottom="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btn_night_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start: 23:00"/>
            <Button
                android:id="@+id/btn_night_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End: 06:00"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Volume"
            android:layout_marginBottom="4dp"/>
        <SeekBar
            android:id="@+id/seek_day_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night Volume (11 PM - 6 AM)"
            android:layout_marginBottom="4dp"/>
        <SeekBar
            android:id="@+id/seek_night_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Chime"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Service Active"/>

    </LinearLayout>
</ScrollView>
